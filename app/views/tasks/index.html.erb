
  <% @tasks.each do |task| %>
  <div style="display: flex; align-items: center;">
    <p> <%= task.completed ? "✅" : "❌" %></p>
    <h2><%= link_to task.title, task_path(task) %></h2>
    <p><%= link_to "🗑 delete", task_path(task), method: :delete %></p>
    </div>
  <% end %>

  <%= link_to "add a new task", tasks_new_path %>



